@model Aplicacao.Models.ClienteViewModel;
@{
    ViewData["Title"] = "Cliente";
}
@{
    var disabled = (Model.Id == null) ? "disabled" : string.Empty;
}
<h2>Clientes</h2>
<hr />

<form asp-controller="Cliente" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div class="form-group">
        <div class=" col-4">
            <label>Nome</label>
            <input asp-for="Nome" type="text" value="@Model.Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class=" col-4">
            <label>CNPJ/CPF</label>
            <input asp-for="CNPJ_CPF" type="text" value="@Model.CNPJ_CPF" class="form-control" />
            <span asp-validation-for="CNPJ_CPF" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class=" col-4">
            <label>Email</label>
            <input asp-for="Email" type="email" value="@Model.Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class=" col-4">
            <label>Celular</label>
            <input asp-for="Celular" type="tel" value="@Model.Celular" class="form-control" />
            <span asp-validation-for="Celular" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="col">
        <button type="button" onclick="Novo()" class="btn btn-info">Novo</button>
        <button type="submit" class="btn btn-info">Gravar</button>
        <button type="button" class="btn btn-info" onclick="Listar()">Listar</button>
        <button type="button" class="btn btn-info" onclick="Excluir(@Model.Id)" @disabled>Excluir</button>
    </div>
</form>

<script>

    function Novo() {
        //window.location = window.origin + "\\Categoria\\Cadastro";
        Request("Cadastro")
    }
    function Listar() {
        Request("");
    }
    function Excluir(Id) {
        Request("Excluir\\" + Id);
    }
    function Request(request) {
        window.location = window.origin + "\\Cliente\\" + request;
    }
</script>